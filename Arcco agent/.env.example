# ============================================================
# ANTHROPIC
# ============================================================

# Obter em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-...

# ============================================================
# SUPABASE (Opcional, para persistência)
# ============================================================

# URL do seu projeto Supabase
SUPABASE_URL=https://seu-projeto.supabase.co

# Chave anon/service role
SUPABASE_KEY=eyJ...

# ============================================================
# SEARCH (Opcional)
# ============================================================

# Chave Brave Search (opcional, usa Claude web_search se ausente)
BRAVE_SEARCH_API_KEY=

# ============================================================
# AGENT BEHAVIOR
# ============================================================

# Modelo principal (padrão: claude-sonnet-4-5-20250929)
AGENT_MODEL=claude-sonnet-4-5-20250929

# Máximo de tokens por resposta
AGENT_MAX_TOKENS=8096

# Máximo de iterações do loop
AGENT_MAX_ITERATIONS=20

# Habilitar cache de respostas (true/false)
AGENT_CACHE=true

# TTL do cache em segundos (padrão: 24h)
AGENT_CACHE_TTL=86400

# Habilitar prompt caching (true/false)
AGENT_PROMPT_CACHE=true

# ============================================================
# DOCUMENT PARSER
# ============================================================

# Timeout para web fetch (segundos)
WEB_TIMEOUT=20.0

# Tamanho máximo de resposta (bytes)
WEB_MAX_SIZE=2000000

# Caracteres máximos do conteúdo parseado
WEB_MAX_CHARS=50000

# ============================================================
# STREAMING
# ============================================================

# Habilitar streaming SSE (true/false)
STREAM_ENABLE=true

# Tamanho de chunk para streaming
STREAM_CHUNK=1000

# ============================================================
# WORKSPACE
# ============================================================

# Diretório de workspace do agente
AGENT_WORKSPACE=/tmp/agent_workspace

# ============================================================
# SECURITY
# ============================================================

# Permitir execução de código Python (true/false)
ALLOW_CODE_EXEC=true

# Timeout para execução de código (segundos)
CODE_TIMEOUT=30.0

# ============================================================
# LOGGING
# ============================================================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Formato de log (json ou text)
LOG_FORMAT=json

# ============================================================
# API / FASTAPI
# ============================================================

# Origem CORS permitida (separadas por vírgula)
CORS_ORIGINS=*

# Porta da API
PORT=8000

# ============================================================
# NETLIFY
# ============================================================

# Se executando em Netlify, estas variáveis são automáticas
# NETLIFY=true
# NETLIFY_BUILD_BASE=/
